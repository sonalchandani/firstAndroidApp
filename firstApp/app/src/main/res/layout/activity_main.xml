<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.csonal.firstapp.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ola_share"
        android:scaleType="center"
        ></ImageView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/text_email"
        android:hint="@string/email_message"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/text_password"
        android:layout_alignStart="@+id/text_password"
        android:layout_marginTop="22dp"
        android:layout_alignRight="@+id/text_password"
        android:layout_alignEnd="@+id/text_password" />


    <Button
        android:text="@string/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_login"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/text_password"
        android:layout_alignLeft="@+id/text_password"
        android:layout_alignStart="@+id/text_password"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:onClick="login"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/text_password"
        android:hint="@string/password_message"
        android:layout_below="@+id/text_email"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
